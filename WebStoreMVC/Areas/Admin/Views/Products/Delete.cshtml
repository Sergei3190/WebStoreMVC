@model ProductViewModel
@{
    ViewData["Title"] = "Удаление товара";
}

<div class="container">
    <h4>Удаление товара</h4>

    <h4>Вы уверены, что хотите удалить выбранный товар?</h4>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2" style="margin-top:10px">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10" style="margin-top:10px">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2" style="margin-top:10px">
                @Html.DisplayNameFor(model => model.Section)
            </dt>
            <dd class="col-sm-10" style="margin-top:10px">
                @Html.DisplayFor(model => model.Section)
            </dd>
            <dt class="col-sm-2" style="margin-top:10px">
                @Html.DisplayNameFor(model => model.Brand)
            </dt>
            <dd class="col-sm-10" style="margin-top:10px">
                @Html.DisplayFor(model => model.Brand)
            </dd>
            <dt class="col-sm-2" style="margin-top:10px">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10" style="margin-top:10px">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2" style="margin-top:10px">
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>
            <dd class="col-sm-10">
                <img src="~/images/shop/@Model.ImageUrl" width="50" higth="50" alt="@Model.Name" />
            </dd>
        </dl>

        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" asp-antiforgery="true">
            <input type="submit" value="Удалить" class="btn btn-danger" /> |
            <a asp-action="Index">К списку</a>
        </form>
    </div>
</div>
