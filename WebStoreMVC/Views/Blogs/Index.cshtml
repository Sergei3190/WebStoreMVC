@model IEnumerable<BlogViewModel>

<section>
	<div class="container">
		<div class="row">
			<div class="col-sm-3">
				<partial name="Partial/_LeftSideBar"/>
			</div>
			<div class="col-sm-9">
				<div class="blog-post-area">
					<h2 class="title text-center">Latest From our Блог</h2>
					@foreach (var blog in Model)
					{
						<div class="single-blog-post">
						<h3>@blog.Name</h3>
						<div class="post-meta">
							<ul>
								<li><i class="fa fa-user"></i> Mac Doe</li>
								<li><i class="fa fa-clock-o"></i> 1:33 pm</li>
								<li><i class="fa fa-calendar"></i> DEC 5, 2013</li>
							</ul>
							<span>
								<i class="fa fa-star"></i>
								<i class="fa fa-star"></i>
								<i class="fa fa-star"></i>
								<i class="fa fa-star"></i>
								<i class="fa fa-star-half-o"></i>
							</span>
						</div>
						<a href="">
							<img src="~/images/blog/@blog.ImageUrl" alt="">
						</a>
						<p>@blog.ShortText</p>
						<a asp-action="ShopBlog" asp-route-id="@blog.Id" class="btn btn-primary">Read More</a>
					</div>
					}
					<div class="pagination-area">
						<ul class="pagination">
							<li><a href="" class="active">1</a></li>
							<li><a href="">2</a></li>
							<li><a href="">3</a></li>
							<li><a href=""><i class="fa fa-angle-double-right"></i></a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>