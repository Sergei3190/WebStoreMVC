@model IEnumerable<WebStoreMVC.Models.Employee>

<div class="container">
    <h3>Сотрудники</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">@item.LastName</a>
                    </td>
                    <td>@item.FirstName</td>
                    <td>@item.MiddleName</td>
                    <td>@item.Age</td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Home" asp-action="Index">На главную</a>
</div>