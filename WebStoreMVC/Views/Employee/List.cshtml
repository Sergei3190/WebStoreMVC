@model IEnumerable<WebStoreMVC.Models.Employee>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
   <h3>Сотрудники</h3>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <a href="/employee/details/@item.Id">@item.LastName</a>
                    </td>
                    <td>@item.FirstName</td>
                    <td>@item.MiddleName</td>
                    <td>@item.Age</td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/">На главную</a>
</body>
</html>
