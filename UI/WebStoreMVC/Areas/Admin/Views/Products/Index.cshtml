@model IEnumerable<ProductViewModel>

<div class="row">
    <div class="col-lg-12">
        <h2>Каталог товаров</h2>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-lg-12 ">
        <div class="alert alert-info">
            <strong>Товары </strong> в каталоге
        </div>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-sm btn-default">Добавить</a>
</p>

<table class="table">
    <thead>
        <th></th>
        <th>@Html.DisplayNameFor(m => m.Id)</th>
        <th>@Html.DisplayNameFor(m => m.Name)</th>
        <th>@Html.DisplayNameFor(m => m.Brand)</th>
        <th>@Html.DisplayNameFor(m => m.Section)</th>
        <th>@Html.DisplayNameFor(m => m.ImageUrl)</th>
        <th>@Html.DisplayNameFor(m => m.Price)</th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            var brandName = product.Brand != null ? product.Brand.Name : null;

            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id">
                        <i class="fa fa-edit"></i>Редактировать
                    </a>
                </td>
                <td>@Html.DisplayFor(_ => product.Id)</td>
                <td>@Html.DisplayFor(_ => product.Name)</td>
                <td>@Html.DisplayFor(_ => brandName)</td>
                <td>@Html.DisplayFor(_ => product.Section!.Name)</td>
                <td>
                    <img src="~/images/shop/@product.ImageUrl" width="50" alt="@product.Name" />
                </td>
                <td>@Html.DisplayFor(_ => product.Price)</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="text-danger">
                        <i class="fa fa-trash-o"></i>Удалить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>